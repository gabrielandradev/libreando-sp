{% extends 'admin.html.twig' %}

{% block title %}Gestionar libros
{% endblock %}

{% block main %}
	<h1>Gestionar libros</h1>
		<table class="table table-sm table-hover">
			<thead>
				<tr>
					<th>Identificador</th>
					<th>Título</th>
					<th>ISBN</th>
					<th>Editorial</th>
					<th>Número de edición</th>
					<th>Lugar de edición</th>
					<th>Idioma</th>
					<th>Notas</th>
					<th>Número de páginas</th>
					<th>Fecha de creación</th>
					<th>Fecha de edición</th>
					<th>Fecha de publicación de edición</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% for libro in libros %}
					<tr>
						<td>{{ libro.id }}</td>
						<td>{{ libro.titulo }}</td>
						<td>{{ libro.isbn }}</td>
						<td>{{ libro.editorial }}</td>
						<td>{{ libro.numeroEdicion }}</td>
						<td>{{ libro.lugarEdicion }}</td>
						<td>{{ libro.idioma }}</td>
						<td>{{ libro.notas }}</td>
						<td>{{ libro.numeroPaginas }}</td>
						<td>{{ libro.fechaCreacion ? libro.fechaCreacion|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ libro.fechaEdicion ? libro.fechaEdicion|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ libro.publicacionEdicion ? libro.publicacionEdicion|date('Y-m-d') : '' }}</td>
						<td>
							<a href="{{ path('app_libro_show', {'id': libro.id}) }}">Mostrar</a>
							<a href="{{ path('app_copia_libro_crud_index', {'id': libro.id}) }}">Gestionar copias</a>
							<a href="{{ path('app_libro_edit', {'id': libro.id}) }}">Editar</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="14">No encontramos libros</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	<a href="{{ path('app_libro_new') }}">Registrar nuevo libro</a>
{% endblock %}
